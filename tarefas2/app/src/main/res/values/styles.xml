<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">Roboto Regular 16sp</item>
    </style>

    <style name="AppThemeDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">Roboto Regular 16sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="list_item" parent="AppTheme">

        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="subheader" parent="AppTheme">
        <item name="android:padding">16dp</item>
        <item name="android:height">48dp</item>
    </style>

    <style name="icon_subheader" parent="AppTheme">
        <item name="android:paddingLeft">72dp</item>
    </style>
    <style name="button" parent="AppTheme">
        <item name="android:minWidth">88dp</item>
        <item name="android:height">36dp</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

</resources>
