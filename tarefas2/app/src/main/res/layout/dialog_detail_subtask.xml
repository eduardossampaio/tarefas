<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/dialog_detail_subtask_name" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_calendar"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/dialog_detail_subtask_description"
            android:layout_alignParentLeft="true"
            android:id="@+id/ic_hour" />

        <TextView
            android:text="@string/dialog_detail_subtasks_no_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_detail_subtask_description"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:id="@+id/dialog_detail_subtask_date"
            android:layout_alignBottom="@+id/ic_hour"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_hour"
            android:layout_below="@+id/ic_hour"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/imageView2" />

        <TextView
            android:text="@string/dialog_detail_subtasks_no_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_detail_subtask_time"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/ic_hour"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:text="@string/dialog_new_subtask_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/dialog_detail_subtask_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:id="@+id/dialog_detail_subtask_description_label"
            android:layout_alignParentRight="true" />

    <TextView
        android:text="@string/dialog_detail_subtasks_no_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/dialog_detail_subtask_description"
        android:layout_below="@+id/dialog_detail_subtask_description_label"
        android:layout_alignParentLeft="true" />
</RelativeLayout>

    </ScrollView>