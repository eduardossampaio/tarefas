<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="colorButtonNormal">@color/primary</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="AppThemeDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>


    <style name="list_item" parent="AppTheme">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="ToolBarStyle" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/primary_dark</item>
    </style>

    <style name="AppTheme.Button" parent="android:Widget.Button">
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColor">@android:color/white</item>

    </style>
    <!--<style name="AppTheme.Button" >-->
        <!--<item name="android:textColor">@android:color/white</item>-->
    <!--</style>-->



    <!-- New Version-->

    <style name="NewAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/new_primary</item>
        <item name="colorPrimaryDark">@color/new_primary_dark</item>
        "
        <item name="colorAccent">@color/accent</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="colorButtonNormal">@color/primary</item>

        <item name="background">@color/app_screen_background</item>
    </style>

    <style name="TranslucentActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>



    <style name="NewAppEditTextStyle" >
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="NewAppButtonTheme" >
        <item name="android:background">@color/accent</item>
        <item name="android:padding">15dp</item>
    </style>
    <style name="NewAppButtonThemeColored" parent="NewAppButtonTheme"  >
        <item name="android:background"> @drawable/button_accent_background</item>>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint">@color/white</item>

    </style>
    <style name="NewAppButtonThemeColored.Red">
        <item name="android:background"> @drawable/button_red_background</item>>
    </style>

    <style name="NewAppButtonThemeColored.Green">
        <item name="android:background"> @drawable/button_green_background</item>>
    </style>


    <style name="MyCustomBetterPickersDialogs" parent="BetterPickersRadialTimePickerDialog.PrimaryColor">

        <item name="bpHeaderSelectedTextColor">@color/bpDark_gray</item>

    </style>


</resources>
