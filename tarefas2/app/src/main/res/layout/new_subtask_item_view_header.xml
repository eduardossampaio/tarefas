<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:custom="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/task_title"
        android:layout_width="0dp"
        android:textSize="24sp"
        android:layout_height="wrap_content"
        android:text="task-title"
        android:layout_marginLeft="30dp"
        android:textColor="#2d2f40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/task_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </TextView>

    <com.app.adprogressbarlib.AdCircleProgress
        android:id="@+id/task_progress"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTintMode="add"
        app:adpgb_background_color="@android:color/transparent"
        app:adpgb_finished_color="@color/accent"
        app:adpgb_progress="50"
        app:adpgb_text_color="@color/accent"
        app:adpgb_text_size="10sp"
        app:adpgb_unfinished_color="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:adpgb_finished_stroke_width="3dp"
        app:adpgb_show_text="false"
        app:adpgb_unfinished_stroke_width="3dp" />


</androidx.constraintlayout.widget.ConstraintLayout>