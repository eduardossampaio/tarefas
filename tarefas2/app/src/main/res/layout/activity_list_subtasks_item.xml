<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="72dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="16dp"
        android:id="@+id/relativeLayout">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_list_subtasks_item_completed"

             />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/list_item_layout"
        android:paddingLeft="72dp"
        android:paddingRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">
    <TextView
        android:text="TextView"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:id="@+id/activity_list_subtasks_item_name"

        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:text="TextView"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_list_subtasks_item_description"
        android:layout_below="@+id/activity_list_subtasks_item_name"
        android:layout_alignParentRight="true"

        android:ellipsize="end"
        android:layout_alignParentLeft="true" />


    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:id="@+id/view"
        android:layout_marginLeft="72dp"
        android:layout_below="@+id/list_item_layout"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true" />


</RelativeLayout>
